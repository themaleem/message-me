

<h3 class="ui center aligned medium icon header">
  Welcome to Message-me app
  <i class="circular power off green icon"></i>
  <i class=""></i>
  <p>Log in to continue</p>
</h3>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    
    <div class="column">
      <%= form_with(scope: :session, url: login_path, class:"ui form", local: true,role:"form") do |f| %>
        <div class="field">
            <%= f.label :username, "Username" %>
            <div class="ui left icon input">
                <%= f.text_field :username, placeholder: "Enter Username" %>
                <i class="user icon"></i>
            </div>
        </div>
        <div class="field">
            <%= f.label :password, "Password" %>
            <div class="ui left icon input">
                <%= f.password_field :password, placeholder: "Enter password" %>
                <i class="lock icon"></i>
            </div>
        </div>
        <%= f.submit "Log in", class:"ui green submit button" %>
      <% end %>    
    </div>

    <div class="middle aligned column">
      <div class="ui green big button">
        <i class="signup icon"></i>
        <%= link_to 'Sign Up', signup_path, class:'b-link' %>
        <%# Sign Up %>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
